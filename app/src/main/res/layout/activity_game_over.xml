<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameOver">

    <TextView
        android:id="@+id/text_natijalar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Sizning natijangiz:"
        style="@style/titleStyle"/>

    <LinearLayout
        android:id="@+id/layout_natijalar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="end"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Savollar soni: "
                style="@style/styleNatija"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To'g'ri javoblar: "
                style="@style/styleNatija"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Noto'g'ri javoblar: "
                style="@style/styleNatija"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Belgilanmaganlar: "
                style="@style/styleNatija"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sarflangan vaqt (s): "
                style="@style/styleNatija"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="start"
            android:paddingStart="12sp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_savollar_soni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleNatija"
                />
            <TextView
                android:id="@+id/text_tugri_javob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleNatija"
                />
            <TextView
                android:id="@+id/text_notugri_javob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleNatija"
                />
            <TextView
                android:id="@+id/text_bush_javob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleNatija"
                />
            <TextView
                android:id="@+id/text_sarflangan_vaqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/styleNatija"
                />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_boshlash"
        style="@style/buttonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="restart" />

</RelativeLayout>