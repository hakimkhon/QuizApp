<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@color/blue</item>
        <!--        <item name="android:fontFamily">sans-serif-black</item>-->
    </style>

    <style name="descriptionStyle">
        <item name="android:textSize">28sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/orange_red</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="styleNatija">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8sp</item>
        <item name="android:paddingRight">8sp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="backgroundTint">@color/aqua_marine</item>
    </style>
</resources>